#ifndef COMMON_CONFIG_HPP
#define COMMON_CONFIG_HPP

// Enable use of Vector (CMake option)
#cmakedefine USE_VECTOR

// Enables use of OMP (CMake option)
#cmakedefine USE_OMP

// Enable use of RAJA (CMake option)
#cmakedefine USE_RAJA

// Enable use of LvArray (CMake option)
#cmakedefine USE_LVARRAY

// Enables use of KOKOS (CMake option)
#cmakedefine USE_KOKKOS

// Enables use of ENABLE_HIP (CMake option)
#cmakedefine ENABLE_HIP

// Enables use of ENABLE_CUDA (CMake option)
#cmakedefine ENABLE_CUDA

// Enables use of SEM2D (CMake option)
#cmakedefine SEM2D 

// Enable save snapshots of wavefields in SEM-proxy (for debugging)
#cmakedefine SEM_SAVE_SNAPSHOTS

// Enable save snapshots of wavefields in FD-proxy (for debugging)
#cmakedefine FD_SAVE_SNAPSHOTS

// Enable printout memory allocation info for arrays
#cmakedefine PRINT_ALLOC_INFO

// Enable coloring scheme to avoid atomic operations
#cmakedefine SEM_MESHCOLOR 

// Add Tests directory (CMake option)
#cmakedefine addTests 

#endif


